<h1><%= @zone.root %></h1>

<%= link_to 'Delete zone', delete_zone_path(@zone), class: 'btn btn-danger' %>

<h2>Records</h2>

<table class="table">
  <thead>
  <tr>
    <th scope="col">Type</th>
    <th scope="col">Name</th>
    <th scope="col">Value</th>
    <th scope="col">TTL</th>
  </tr>
  </thead>
  <tbody>
  <% @zone.records.each do |record| %>
    <tr>
      <td><%= record.type %></td>
      <td><%= record.name %></td>
      <td><%= record.value %></td>
      <td><%= record.ttl %></td>
    </tr>
  <% end %>
  </tbody>
</table>