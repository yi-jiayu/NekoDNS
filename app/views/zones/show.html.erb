<% content_for :breadcrumbs do %>
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="<%= zones_path %>">Zones</a></li>
      <li class="breadcrumb-item active" aria-current="page"><%= @zone.root %></li>
    </ol>
  </nav>
<% end %>

<h1><%= @zone.root %></h1>

<div>
  <%= link_to 'Delete zone', delete_zone_path(@zone), class: 'btn btn-danger' %>
</div>

<h2>Records</h2>

<table class="table">
  <thead>
  <tr>
    <th scope="col">Type</th>
    <th scope="col">Name</th>
    <th scope="col">Value</th>
    <th scope="col">TTL</th>
  </tr>
  </thead>
  <tbody>
  <% @zone.records.each do |record| %>
    <tr>
      <td><%= record.type %></td>
      <td><%= record.name %></td>
      <td><%= record.value %></td>
      <td><%= record.ttl %></td>
    </tr>
  <% end %>
  </tbody>
</table>