<h1>Account</h1>
<div>
  <h2>Details</h2>
  <span class="font-weight-bold">Name:</span>
  <span><%= current_user.name %></span>
</div>
<div>
  <h2>Integrations</h2>
  <section>
    <h3>Telegram</h3>
    <% if current_user.telegram_user_id.nil? %>
      <p>Use the button below to login with Telegram and link your Telegram account:</p>
      <script async src="https://telegram.org/js/telegram-widget.js?6"
              data-telegram-login="<%= Rails.configuration.x.telegram.bot_username %>"
              data-size="large"
              data-auth-url="<%= integrations_telegram_callback_url %>"
              data-request-access="write"></script>
    <% else %>
      <p>Telegram account linked!</p>
      <%= link_to 'Unlink Telegram account', integrations_telegram_path, method: :delete, class: 'btn btn-danger' %>
    <% end %>
  </section>
</div>