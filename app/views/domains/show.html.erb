<h1><%= @domain.root %></h1>
<h2>Records</h2>

<table class="table">
  <thead>
  <tr>
    <th scope="col">Type</th>
    <th scope="col">Name</th>
    <th scope="col">TTL</th>
  </tr>
  </thead>
  <tbody>
  <% @domain.records.each do |record| %>
    <tr>
      <td><%= record.type %></td>
      <td><%= record.name %></td>
      <td><%= record.ttl %></td>
    </tr>
  <% end %>
  </tbody>
</table>